{{> Header }}
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #2c3e50;
        color: white;
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
    }

    h1 {
        text-align: center;
        margin-top: 20px;
    }

    form {
        width: 50%;
        max-width: 500px;
        margin: 0 auto;
        padding: 20px;
        background-color: #f2f0de;
        border-radius: 10px;
        text-align: center;
    }

    label {
        display: block;
        margin-bottom: 5px;
        font-weight: bold;
        color: #191970; /* midnight blue */
    }

  

    #register-form-submit-button {
        width: 100%;
        padding: 10px;
        margin-top: 10px;
        box-sizing: border-box;
        border-radius: 5px;
        background-color: #34495e;
        color: white;
        border: none;
        cursor: pointer;
    }

    #register-form-submit-button:hover {
        background-color: white;
        color: #34495e;
    }

    .errorMessage {
        color: crimson;
    }

    footer {
        text-align: center;
        padding: 20px;
        background-color: #34495e;
        color: white;
        margin-top: auto;
    }
</style>

<section>
    <h1>Sign up</h1>
</section>
<section>
    <body>
        <form id="register-form" action="/users" method="POST">
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" >
        
        <label for="password">Password:</label>
        <input type="password" id="password" name="password" required>
        
        <label for="confirmPassword">Confirm Password:</label>
        <input type="password" id="confirmPassword" name="confirmPassword" required>

        <label for="Name">What should we call you? </label>
        <input type="text" id="name" name="name" required>

        <button type="submit" id="register-form-submit-button">Register</button>
        <p id="error">{{errorMessage}}</p>
        </form>
    </body>
</section>
<footer>
    {{> Footer }}
</footer>
