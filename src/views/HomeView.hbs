{{> Header }}

<style>
    body {
        font-family: 'Helvetica Neue', Arial, sans-serif;
        background-color: #2c3e50; /* Midnight color */
        color: #ecf0f1; /* Light color for contrast */
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
    }
    section {
        padding: 20px;
        text-align: center;
        flex: 1;
    }
    h1 {
        color: white;
    }
  
    blockquote {
        font-style: italic;
        color: #ecf0f1;
        margin: 20px auto;
        max-width: 600px;
        text-align: center; /* Center the blockquote */
    }
    .slideshow-section {
        position: relative;
        margin-top: 50px;
        margin-bottom: 20px; /* Additional space at the bottom */
    }
    .slideshow-container {
        display: flex;
        justify-content: center;
        align-items: center;
        max-width: 1000px;
        margin: auto;
        overflow: hidden;
        position: relative;
    }
    .slides {
        display: flex;
        transition: transform 0.5s ease-in-out;
    }
    .slide {
        min-width: 33.33%;
        box-sizing: border-box;
        padding: 10px;
    }
    .slide img {
        width: 100%;
        height: 300px; /* Fixed height for all images */
        object-fit: cover; /* Ensure images are cropped to fit */
        border-radius: 10px;
    }
    .explore-link {
        text-decoration: none;
        color: white;
        font-size: 2em;
        transition: color 0.3s;
        position: absolute;
        top: -30px; /* Adjusted position to be on top */
        left: 50%;
        transform: translateX(-50%);
    }
    .explore-link:hover {
        color:#34495e;
    }
    footer {
        text-align: center;
        padding: 20px;
        background-color: #34495e;
        color: white;
        width: 100%;
    }
</style>

