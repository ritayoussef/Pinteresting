{{> Header }}

<div class="main-container">
    <section class="post">
        <div class="post-info">
            <userAccount>
                <img src="{{user.profile_picture}}" alt="picture">
                <h2>{{user.name}}</h2>
            </userAccount>
            <postDetails>
                <h1>{{post.title}}</h1>
                <img src="{{post.picture}}" alt="post" width="1000px">
                <p>Likes: {{likes}}</p>
            </postDetails>
        </div>
        <div class="comments-section">
            <h2>Comments</h2>
            <ul class="comment-list">
                {{#each comments}}
                <li class="comment">
                    <div class="comment-info">
                        <img src="{{user.profile_picture}}" alt="commenter picture">
                        <h3>{{user.name}}</h3>
                    </div>
                    <p>{{content}}</p>
                    <time datetime="{{createdAt}}">Commented on {{createdAt}}</time>
                </li>
                {{/each}}
            </ul>
            <a href="{{ path 'comment' }}">Comment</a>
            <!-- Form for adding a comment -->
        </div>
    </section>
</div>

{{> Footer }}

