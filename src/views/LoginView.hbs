{{> Header }}
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #2c3e50;
        color: white;
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
    }

    h1 {
        text-align: center;
        margin-top: 20px;
    }

    form {
        width: 50%;
        max-width: 500px;
        margin: 0 auto;
        padding: 20px;
        background-color: #f2f0de;
        border-radius: 10px;
        text-align: center;
    }

    label {
        display: block;
        margin-bottom: 5px;
        font-weight: bold;
        color: #191970; /* midnight blue */
    }

    
     #login-form-submit-button{
        width: 100%;
        padding: 10px;
        margin: 10px 0;
        box-sizing: border-box;
        border-radius: 5px;
        background-color: #34495e;
        color: white;
        border: none;
        cursor: pointer;
    }

    button[type="submit"]:hover {
        background-color: white;
        color: #34495e;
    }

    .error-message {
        color: crimson;
    }

    footer {
        text-align: center;
        padding: 20px;
        background-color: #34495e;
        color: white;
        margin-top: auto;
    }
</style>

<section>
    <h1>Login</h1>
</section>
<section>
    <body>
       {{#if errorMessage}}
        <p>{{errorMessage}}</p>
    {{/if}}
    <form id="login-form" action="/login" method="POST">
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" {{#if remember}}value="{{remember}}" {{/if}}><br><br>
        <label for="password">Password:</label>
        <input type="password" id="password" name="password" required><br><br>
        <label for="remember">Remember Me:</label>
        <input type="checkbox" id="remember" name="remember"><br><br>
        <input type="submit" value="Login" id="login-form-submit-button">
          <p id="error">{{errorMessage}}</p>
    </form>
</body>
</section>
<footer>
    {{> Footer }}
</footer>
